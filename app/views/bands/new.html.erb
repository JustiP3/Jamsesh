<h1>Create a new band</h1>

<% if flash[:message] %>
    <p><%= flash[:message] %></p>  
<% end %>

<% if @band.errors.any? %>
    <% @band.errors.full_messages.each do |msg| %>
        <%= msg %>
    <% end %>
<% end %>



<%= form_for @band do |f| %>
    <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
    </p>

    <p>
    <%= f.label :location %>
    <%= f.text_field :location %>
    </p>

    <h3>Add a bandmate:</h3>
    <h4>Select from list</h4>

    <p>
    <%= fields_for @user do |u| %>
        <%= u.label :username %>
        <%= u.collection_select(:username, @users, :username, :username) %>
    <% end %>
    </p>

    <p>
    <%= f.submit %>
    </p>
<% end %>

