<h1><%= @band.name %></h1>
<p><%= @band.location %></p>
<p>Members:</p>
<%= @band.users.each do |member| %>
    <p><%= link_to member.name, user_path(member) %></p>
<% end %>

<p><%= link_to "Add or Remove Member", edit_band_path(@band) %></p>

<div style="padding:20px;">
    <h2>Write a message to the band:</h2>
    <%= form_for @post do |f| %>
        <%= f.label :title %><br>
        <%= f.text_field :title %> <br>   
        <%= f.label :post %><br>      
        <%= f.text_area :content %> <br> 

        need to add band id as a hidden field 

        <%= f.submit "Post message to band" %>
    <% end %>
</div>

