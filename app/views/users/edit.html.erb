<h1>Edit Profile</h1>
<h2><%= @user.name %></h2>

<% if @user.errors.any? %>
<div class="fields_with_errors">
    <h4>"Errors:"</h4>
    <% @user.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
    <% end %>
</div>
<% end %>



<%= form_for @user do |f| %>
    <p>
    <%= f.label "Name" %>
    <%= f.text_field :name %>
    </p>
    <p>
    <% unless @user.email.length > 0 %>
        <%= f.label "Add Email" %>
        <%= f.text_field :email %>
    <% end %>
    </p>    
    <p>
    <%= f.label "Location" %>
    <%= f.text_field :location %>
    </p>
    <p>
    <%= f.label "Primary Instrument" %>
    <%= f.text_field :instrument %>
    </p>
    <p>
    How commited are you? 1 = super casual - 10 = ready to go all in <br>
    <%= f.label "Commitment Level" %>
    <%= f.text_field :commitment %>
    </p>
    <p>
    <%= f.label "Bio" %>
    <%= f.text_area :bio %>
    </p>
   
    <%= f.submit %>
<% end %>
