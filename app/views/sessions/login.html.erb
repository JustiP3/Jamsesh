<h1>Log In</h1>

<% if @error %>
    <h4>Errors:</h4>
    <p><%= @error %></p>

<% elsif @user == nil %>
    <h4>Error:</h4>
    <p>That user does not exist</p>    
<% end %>

<%= form_tag login_path do %>
    <%= "Username: " %>
    <%= text_field_tag :'sessions[username]' %><br>

    <%= "Password: " %>
    <%= password_field_tag :password %><br>

    <%= hidden_field_tag :authenticity_token, form_authenticity_token %> 
    <%= submit_tag "Login" %>
<% end %>