<h1>Log In</h1>

<% if @user.errors.any? %>
    <h4>"Errors:"</h4>
    <% @user.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
    <% end %>
<% end %>

<%= form_tag login_path do %>
    <%= "Username: " %>
    <%= text_field_tag :'user[username]' %><br>

    <%= "Password: " %>
    <%= password_field_tag :password %><br>

    <%= hidden_field_tag :authenticity_token, form_authenticity_token %> 
    <%= submit_tag "Login" %>
<% end %>